        <!-- Logs em Tempo Real -->
        <div class="card">
            <h3>
                <i class="fas fa-terminal"></i> Logs em Tempo Real
                <button class="btn btn-primary" id="refreshLogsBtn2" onclick="refreshLogs()" style="margin-left: auto;">
                    <i class="fas fa-refresh"></i> Atualizar
                </button>
