        <div class="nav-links">
            <a href="/dashboard.html" class="active"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
            <a href="/users.html" id="usersMenuLink" style="display: none;"><i class="fas fa-users"></i> Usu√°rios</a>
            <a href="/terminal.html"><i class="fas fa-code"></i> Terminal</a>
            <a href="/settings.html"><i class="fas fa-cog"></i> Configura√ß√µes</a>
