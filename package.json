{
  "name": "zabbix-whatsapp-bot",
  "version": "1.0.0",
  "description": "Dispara alertas do Zabbix para grupo do WhatsApp",
  "main": "index.js",
  "scripts": {
    "start": "node validate-config.js && node index.js",
    "dev": "nodemon index.js",
    "setup": "node setup.js",
    "validate": "node validate-config.js",
    "pm2:start": "npm run validate && npm run logs:create && pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop zabbix-whatsapp-bot",
    "pm2:restart": "pm2 restart zabbix-whatsapp-bot",
    "pm2:logs": "pm2 logs zabbix-whatsapp-bot",
    "pm2:monit": "pm2 monit",
    "pm2:delete": "pm2 delete zabbix-whatsapp-bot",
    "test:health": "curl -f http://localhost:3000/health || echo 'Serviço não está rodando'",
    "test:zabbix": "node scripts/test-zabbix.js",
    "logs:create": "mkdir -p logs",
    "logs:clean": "rm -rf logs/*.log",
    "clean": "rm -rf node_modules wwebjs_auth .wwebjs_cache firstMessages.json logs"
  },
  "keywords": [
    "whatsapp",
    "zabbix",
    "bot"
  ],
  "author": "kaiqueadm",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "pino": "^8.16.0",
    "pino-pretty": "^10.2.0",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.34.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
